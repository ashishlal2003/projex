<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Authentication</title>
</head>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@200&family=Poppins:wght@400;500&family=Varela+Round&display=swap');
</style>
<style>
  @import url('https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@300;400&family=Montserrat:wght@200&family=Poppins:wght@400;500&family=Raleway:wght@300&family=Varela+Round&display=swap');
  </style>
  <link rel="stylesheet" href="/css/Authentication.css">  

<body>

  

  <div class="form1" id="f1">
    <% if (message) { %>
      <div class="alert alert-success"><%= message %></div>
  <% } %>
    <form action="/authentication" method="POST">
      <input name="name" class="but" id="uname" type="text" placeholder="Username">
      <input name="username" class="but" id="em1" type="email" placeholder="Email ID">
      <input name="password" class="but" id="pass1" type="password" placeholder="Password">
      <input id="confirm_pass" class="but" type="password" name="confirm_pass" placeholder="Confirm Password" required onkeyup="validate_password()">
      <input class="sub" id="signsub" type="submit" value="Signup" onclick="wrong_pass_alert()">
      <input type="checkbox" id="remember" name="remember_me" value="t&c" required>
      <a id="tc" href="">I agree with terms & conditions</a>
      <p id="password_not_match">*Passwords do not match!</p>
    </form>

    <span id="wrong_pass_alert"></span>
        <!-- <div class="buttons">
            <button id="create"
                    class="submit_btn"
                    onclick="wrong_pass_alert()">
                Submit
            </button>
        </div> -->
  </div>
  <div class="form1" id="f2">
    <form action="/pre-workspace" method="post">
      <input name="username" class="but" id="em2" type="email" placeholder="Email ID">
      <input name="password" class="but" id="pass2" type="password" placeholder="Password">
      


      <input class="sub" id="logsub" type="submit" value="Login">
      <hr class="ruler" id="r1">
      <p class="or">Or</p>
      <hr class="ruler" id="r2">
      <button class="google">Continue with Google</button>
    </form>

    <a id="reset_pass" href="/reset-password">Forgot Password?</a>
  </div>
  <!-- <img class="back" src="https://images.unsplash.com/photo-1519681393784-d120267933ba?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxleHBsb3JlLWZlZWR8MXx8fGVufDB8fHx8&w=1000&q=80" alt="Your Image"> -->
  <div class="background"></div>
  <div class="log_tab">
    <div class="nav">
      <button class="auth one" id="logid">LOG IN</button>
      <button class="auth two" id="subid">SIGN UP</button>
    </div>
  </div>
</body>
<script>
  
  let a=document.getElementById('logid')
  let b=document.getElementById('subid');
  let x=document.getElementById('f1')
  let y=document.getElementById('f2');
  let pass_missmatch=document.getElementById('password_not_match');

  window.onload=function()
  {
    b.click()
    b.style.borderBottom="solid 3px orangered"
    pass_missmatch.style.display="none"
  }
  a.addEventListener('click', function()
  {
    y.style.zIndex=2
    x.style.zIndex=-1
    b.style.borderBottom="none"
    a.style.borderBottom="solid 3px orangered"
  })
  b.addEventListener('click', function()
  {
    x.style.zIndex=2
    y.style.zIndex=-1
    a.style.borderBottom="none"
    b.style.borderBottom="solid 3px orangered"
  })

  function validate_password() {
 
 var pass = document.getElementById('pass1').value;
 var confirm_pass = document.getElementById('confirm_pass').value;
 if (pass != confirm_pass) {
    //  document.getElementById('wrong_pass_alert').style.color = 'red';
    //  document.getElementById('wrong_pass_alert').innerHTML
    //    = 'â˜’ Use same password';
     pass_missmatch.style.display="inline"
     document.getElementById('signsub').disabled = true;
     document.getElementById('signsub').style.opacity = (0.4);
 } else {
    //  document.getElementById('wrong_pass_alert').style.color = 'green';
    //  document.getElementById('wrong_pass_alert').innerHTML =
    //      'ðŸ—¹ Password Matched';
    pass_missmatch.style.display="none"
     document.getElementById('signsub').disabled = false;
     document.getElementById('signsub').style.opacity = (1);
 }
}

function wrong_pass_alert() {
            if (document.getElementById('pass').value != "" &&
                document.getElementById('confirm_pass').value != "") {
                alert("Your response is submitted");
            } else {
                alert("Please fill all the fields");
            }
        } 
</script>

</html>