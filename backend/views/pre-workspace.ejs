            viewuser.style.display="none"
            creatediv.style.display="none"
        })

        projects.addEventListener("click",
        function()
        {
            edituser.style.display="none"
            viewuser.style.display="none"
            creatediv.style.display="flex"
        })

        create.addEventListener("click",
